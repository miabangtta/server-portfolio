block content
    include ../common/spinner.pug
    .wrapper
        include ../common/hero.pug
        section.section
            svg.triangle.triangle_fill_white.triangle_up(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 1000 85" preserveaspectratio="none")
                polygon(points="0,0   0,86   500,86   500,75.5 1000,0   1000,86   500,86   500,75.5")                    
            .section-title.title-blog
                .block-title Блог                
            .blog.container
                .blog__sidebar
                    .blog__sidebar-trigger
                    ul.blog__headings-list     
                    if (articles)            
                        each index in articles
                            li.blog__headings-item(data-scroll=`${index.id}`)
                                a.blog__headings-link(href=`#article${index.id}` speed="1000")
                                    =index.title                         
                .blog__content.articles
                    ul.articles__list
                        if (articles)
                            each index in articles
                                li.articles__item(data-scroll-to=`${index.id}`)
                                    .articles__title(id=`article${index.id}`)
                                        =index.title   
                                    .articles__date
                                        =index.date  
                                        //- #{item[1]}  
                                    p
                                        =index.body                                
    include ../common/footer.pug